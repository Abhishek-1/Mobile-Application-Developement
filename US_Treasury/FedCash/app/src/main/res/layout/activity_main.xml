<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uic.sdmp.abhi.fedcash.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:text="Please select an option"
        android:id="@+id/textview1"
        android:layout_marginTop="20dp"
        />

    <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner1"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:entries="@array/order"
        android:layout_toRightOf="@+id/textview1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:text="Select Year"
        android:layout_below="@id/textview1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:entries="@array/years"
        android:layout_toRightOf="@+id/textView2"
        android:layout_below="@id/spinner1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:text="Select Month"
        android:layout_below="@id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:entries="@array/months"
        android:layout_toRightOf="@+id/textView2"
        android:layout_below="@id/spinner2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:text="Select Days"
        android:layout_below="@id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:entries="@array/days"
        android:layout_toRightOf="@+id/textView3"
        android:layout_below="@id/spinner3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:text="Working Days"
        android:layout_below="@id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:entries="@array/days2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_below="@id/spinner4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button1"
        android:layout_below="@id/textView5"
        android:layout_marginTop="20dp"
        android:text="Request Service"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button2"
        android:layout_below="@id/spinner5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp"
        android:text="Unbind"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button3"
        android:text="launch Transactions"
        android:layout_below="@+id/Button1"
        android:layout_marginTop="20dp" />



</RelativeLayout>
